<header class="bg-indigo-600">
  <nav class="container">
    <div class="w-full py-6 flex flex-col xs:flex-row items-center justify-between border-b border-indigo-500 lg:border-none">
      <div class="flex items-center">
        <a class="flex items-center text-indigo-100" href="/">
          <div class="w-8 h-auto">
            {% include '../svg/logo.svg' %}
          </div>
          <p class="text-white ml-2 font-bold text-xl">Fastify Starter</p>
        </a>
        <div class="hidden ml-10 space-x-8 lg:block">
        </div>
      </div>
      <div class="flex items-center space-x-4 mt-4 xs:mt-0">
        {% if user %}
          <a class="inline-block bg-indigo-500 py-2 px-4 border border-transparent rounded-md text-base font-medium text-white hover:bg-opacity-75" href="/account">Account</a>
          <a class="inline-block bg-white py-2 px-4 border border-transparent rounded-md text-base font-medium text-indigo-600 hover:bg-indigo-50" href="/api/logout">Logout</a>
        {% else %}
          <a class="inline-block bg-indigo-500 py-2 px-4 border border-transparent rounded-md text-base font-medium text-white hover:bg-opacity-75" href="/create">Create Account</a>
          <a class="inline-block bg-white py-2 px-4 border border-transparent rounded-md text-base font-medium text-indigo-600 hover:bg-indigo-50" href="/login">Login</a>
        {% endif %}
      </div>
    </div>
  </nav>
</header>
