{% extends 'partials/layout.twig' %}
{% set title = 'Create' %}

{% block body %}
  <section class="container py-16">
    <h1 class="text-4xl font-black">
      {{ title }}
    </h1>
    <form hx-post="/api/user" hx-target="#response" class="mt-4 flex-wrap">
      <label class="block">
        Email:
        <input
          required
          name="email"
          class="block rounded w-full"
          type="email"
        >
      </label>
      <label class="block mt-4">
        Password:
        <input
          required
          name="password"
          class="block rounded w-full"
          type="password"
        >
      </label>
      <button class="mt-8 bg-gray-900 text-white px-4 py-2 rounded">
        Submit
      </button>
    </form>
    <div id="response"></div>
  </section>
{% endblock %}
